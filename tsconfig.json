{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": ["es2017"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "paths": {
            "@components/*": ["./src/components/*"],
            "@screens/*": ["./src/screens/*"],
            "@assets/*": ["./src/assets/*"],
            "@layouts/*": ["./src/layouts/*"],

            "@icons/*": ["./src/assets/icons/*"],
            "@images/*": ["./src/assets/images/*"],
            "@constants/*": ["./src/constants/*"],

            "@services/*": ["./src/services/*"],
            "@providers/*": ["./src/providers/*"],
            "@hooks/*": ["./src/hooks/*"],
        }
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}
